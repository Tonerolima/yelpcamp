<% include partials/header%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Login</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action='/login' method="POST">
                <input type='text' style="display: none" name='source' value=<%= source %>>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
                Don't have an account? <a href="/register"><em>Sign Up</em></a>
            </form>
        </div>
    </div>
</div>


<% include partials/footer%>